<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
    <link rel="stylesheet" href="/stylesheets/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/fonts.css">
    <link rel="stylesheet" href="/stylesheets/book_viewer.css">
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Directory Index</a>
              <ul class="pure-menu-list">
                <% @pages.each_index do |page| %>
                <li class="pure-menu-item">
                  <a href="<%= url(@pages[page]) %>" class="pure-menu-link">
                    <%= @ancors[page] %>
                  </a>
                </li>
                <% end %>
              </ul>
          </div>
      </div>

      <div id="main">
        <div class="header">
          <h1><%= @title %></h1>
          <h2>The amazing listing exercise</h2>
        </div>

        <div class="content">
          <h2 class="content-subhead">
            <a href="<%= "/?order=#{@sorted}" %>" class="pure-menu-link"><%= "Sort in #{@order} order by title" %></a>
          </h2>
          <h1>Novels</h1>

          <div class="pure-menu">
              <ul class="pure-menu-list">
                <% @pages.each_index do |page| %>
                <li class="pure-menu-item">
                  <a href="<%= url(@pages[page]) %>" class="pure-menu-link">
                    <%= @ancors[page] %>
                  </a>
                </li>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
